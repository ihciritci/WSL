##  ubuntu 20.04 --> 22.04 /24.04

sudo apt update
sudo apt upgrade -y
sudo apt dist-upgrade -y

sudo apt install update-manager-core -y


lsb_release -a


  *-*-    update to 22.04 

sudo do-release-upgrade


  *-*-    update to 24.04 

sudo nano /etc/update-manager/release-upgrades

      Prompt=normal

sudo do-release-upgrade -d
